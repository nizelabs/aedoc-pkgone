{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist/types",
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src"]
}
